
@{
    ViewData["Title"] = "Lobby";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
@model LobbiesViewModel
<body>


    <h1>
        Lobby#
        <span id="lobbyID">@Model.Lobby.LobbyID</span>
    </h1>
    <div >
        <div class="enemy-cards">
            @if (Model.Lobby.user1 != null && Model.Lobby.user1 != Model.username )
            {
                <div class="card-container c2">
                    <h4 class="username-h4">@Model.Lobby.user1</h4>
                </div>
            }

            @if (Model.Lobby.user2 != null && (Model.Lobby.user2 != Model.username || true))
            {
                <div class="card-container c2">
                    <h4 class="username-h4">@Model.Lobby.user2</h4>
                </div>
            }
            @if (Model.Lobby.user3 != null && (Model.Lobby.user3 != Model.username || true))
            {
                <div class="card-container c2">
                    <h4 class="username-h4">@Model.Lobby.user3</h4>
                </div>
            }
            @if (Model.Lobby.user4 != null && (Model.Lobby.user4 != Model.username || true))
            {
                <div class="card-container c2">
                    <h4 class="username-h4">@Model.Lobby.user4</h4>
                </div>
            }
        </div>

        <div class="card-container c1 d-flex">
            <div class="deck"></div>
            
            <h4 class="">@Model.username</h4>
            <div class="my-cards d-flex"></div>
        </div>
    </div>

    
</body>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/signalr/signalr.js"></script>
<script src="~/lib/signalr/game.js"></script>