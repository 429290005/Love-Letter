
@{
    ViewData["Title"] = "Index";
    
}
@model LobbiesViewModel
<div class="container ">
    <h1>Lobbies</h1>
    <button class="btn  btn-primary ">Create Lobby</button>
    @foreach (Lobby lobby in Model.Lobbies)
    {
        <div class="card lobby mt-4">
            <div class="card-body">
                <h1>Lobby#@lobby.LobbyID</h1>
                <h5>@lobby.numberOfPlayers/@lobby.Space</h5>
                <form method="post" asp-action="JoinLobby" asp-controller="Game" >
                    <input type="text" class="form-group" name="username" placeholder="Enter Username" required>
                    <input type="hidden" name="LobbyID" value="@lobby.LobbyID" />
                    <button class="btn btn-light" type="submit">Join</button>
                </form>
                @*<a class="btn btn-light" href="@Url.ActionLink("Lobby","Game",new {lobbyID=lobby.LobbyID })">Join</a>*@
            </div>
        </div>
    }


</div>

